<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="tfranek" id="structures-001">
        <comment>Create exchange schema in database</comment>
        <sql>
            CREATE SCHEMA IF NOT EXISTS ${schemaName};
        </sql>
    </changeSet>
    <changeSet author="tfranek" id="structures-001">
        <comment>Create 'user' table</comment>
        <createTable tableName="user" schemaName="${schemaName}">
            <column name="id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="structures-002" author="tfranek">
        <comment>Create 'currency' table</comment>
        <createTable tableName="currency" schemaName="${schemaName}">
            <column name="id" type="VARCHAR(3)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_currency_id" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="tfranek" id="structures-003">
        <comment>Create 'user_account' table</comment>
        <createTable tableName="user_account" schemaName="${schemaName}">
            <column name="id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="pk_user_account" nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints foreignKeyName="fk_user_account_currency"
                             referencedTableName="currency"
                             referencedColumnNames="id"
                             referencedTableSchemaName="${schemaName}"
                             nullable="false"/>
            </column>
            <column name="id_user" type="UUID">
                <constraints foreignKeyName="fk_user_account_user"
                             referencedTableName="user"
                             referencedColumnNames="id"
                             referencedTableSchemaName="${schemaName}"
                             nullable="false"
                />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="structures-004" author="tfranek">
        <comment>Create 'exchange_event' table</comment>
        <createTable tableName="exchange_event" schemaName="${schemaName}">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_exchange_event" nullable="false"/>
            </column>
            <column name="pair" type="VARCHAR(6)">
                <constraints nullable="false"/>
            </column>
            <column name="direction" type="VARCHAR(1)">
                <constraints nullable="false"  checkConstraint="direction in ('B','S')" />
            </column>
            <column name="date_utc" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id"  type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_exchange_event_user"
                             referencedTableName="user"
                             referencedColumnNames="id"
                             referencedTableSchemaName="${schemaName}"
                />
            </column>
            <column name="event_type" type="VARCHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column name="user_account_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_exchange_event_user_account"
                             referencedTableName="user_account"
                             referencedColumnNames="id"
                             referencedTableSchemaName="${schamaName}"
                />
            </column>
            <column name="value" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="ratio" type="NUMBER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>