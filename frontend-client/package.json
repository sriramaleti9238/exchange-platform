{
  "name": "frontend-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "coverage": "ng test --no-watch --code-coverage",
    "test-headless": "ng test --watch=false --browsers=ChromeHeadless",
    "generate-full-api": "node scripts/generate-all-apis.ts",
    "generate-common-api": "openapi-generator-cli generate -i ../api-common/src/main/resources/commons.yml -g typescript-angular -o src/app/api",
    "generate-common-system-api": "openapi-generator-cli generate -i ../api-common/src/main/resources/system.yml -g typescript-angular -o src/app/api",
    "generate-users-api": "openapi-generator-cli generate -i ../api-common/src/main/resources/users.yml -g typescript-angular -o src/app/api",
    "generate-tickets-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/tickets.yml -g typescript-angular -o src/app/api --schema-mappings UserTicket=org.exchange.app.common.api.model.UserTicket --schema-mappings ErrorObjectResponse=org.exchange.app.common.api.model.ErrorObjectResponse",
    "generate-accounts-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/accounts.yml -g typescript-angular -o src/app/api --schema-mappings Currency=org.exchange.app.common.api.model.Currency --schema-mappings UserAccount=org.exchange.app.common.api.model.UserAccount --schema-mappings UserOperation=org.exchange.app.common.api.model.UserOperation",
    "generate-dictionaries-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/dictionaries.yml -g typescript-angular -o src/app/api",
    "generate-rates-api": "openapi-generator-cli generate -i ../api-external/src/main/resources/rates.yml -g typescript-angular -o src/app/api --schema-mappings Pair=org.exchange.app.common.api.model.Pair",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/forms": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "@angular/router": "^20.1.3",
    "@ngrx/effects": "^20.0.0-rc.0",
    "@ngrx/store": "^20.0.0-rc.0",
    "@ngrx/store-devtools": "^20.0.0-rc.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@openapitools/openapi-generator-cli": "^2.21.4",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "echarts": "^5.6.0",
    "jasmine-marbles": "^0.9.2",
    "ngx-echarts": "^20.0.1",
    "ngx-toastr": "^19.0.0",
    "rxjs": "^7.8.2",
    "state": "^0.2.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "zone.js": "^0.15.1",
    "keycloak-angular": "^20.0.0",
    "keycloak-js": "^26.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.3",
    "@types/jasmine": "^5.1.8",
    "@types/node": "^24.1.0",
    "angular-eslint": "^20.1.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jasmine-core": "^5.9.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ngx-translate-testing": "^7.0.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
